  /* LEETCDOE  1221. Split a String in Balanced Strings  */
  
  class Solution {
public:
    int balancedStringSplit(string s) {
        int count=0,result=0;
        for(int i=0;i<s.size();i++){
            if(s[i]=='R')
                count++;
            else 
                count--;
            
            if(count==0)
                result++;
        }
        return result;
    }
};
