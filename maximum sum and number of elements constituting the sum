/* Hackerath : https://www.hackerearth.com/practice/algorithms/searching/linear-search/practice-problems/algorithm/maximum-sum-4-f8d12458/ */

#include<bits/stdc++.h>

using namespace std;

int main(){



int n;cin>>n;

int A[n];

long long int sum = 0,count = 0;

for(int i = 0; i<n; i++){

cin>>A[i];

if(A[i]>=0){

sum+=A[i];

count++;

}

}

sort(A,A+n);

if(count==0)cout<<A[n-1]<<" "<<"1"<<endl;

else cout<<sum<<" "<<count<<endl;

return 0;

}
