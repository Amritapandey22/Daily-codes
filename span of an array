#include<iostream>
#include<climits>
using namespace std;

int main(){
    //write your code here
    int maxnum=0,minnum=INT_MAX;
    int n;
    cin>>n;
    int arr[n];
    for(int i=0;i<n;i++){
        cin>>arr[i];
    }
    for(int i=0;i<n;i++){
        maxnum=max(maxnum,arr[i]);
        minnum=min(minnum,arr[i]);
        
    }
    cout<<maxnum-minnum<<endl;
    
    return 0;
    
    
}



/* PEPCODING */
